{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<h1 class="text-5xl">S'inscrire</h1>

	<div class="flex items-center p-4 mb-4 text-sm text-yellow-800 rounded-lg bg-yellow-50 border border-solid border-yellow-800 dark:bg-gray-800 dark:text-yellow-300" role="alert">
		<svg class="shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
			<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
		</svg>
		<span class="sr-only">Info</span>
		<p>
			Votre compte ne sera activé qu'après validation par l'administrateur et vous serez notifié(e) par e-mail de l'activation de votre compte.
		</p>
	</div>

	{# {{ form(registrationForm) }} #}
	{{ form_errors(registrationForm) }}

	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.lastname, {
        label: "Nom de famille",
        label_attr: {
            class: "registration-label"
        },
        attr: {
            class: "registration-input mb-3"
        }
    }) }}
	{{ form_row(registrationForm.firstname, {
        label: "Prénom",
        label_attr: {
            class: "registration-label"
        },
        attr: {
            class: "registration-input mb-3"
        }
    }) }}
	{{ form_row(registrationForm.email, {
        label: "Adresse e-mail",
        label_attr: {
            class: "registration-label"
        },
        attr: {
            class: "registration-input mb-3"
        }
     })
     }}
	{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe',
            label_attr: {
                class: "registration-label"
            },
            attr: {
                class: "registration-input mb-3"
            }
        })
    }}

	<button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">S'inscrire</button>
	{{ form_end(registrationForm) }}
{% endblock %}
